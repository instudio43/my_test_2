                <option value="MO">Missouri</option>
                <option value="MT">Montana</option>
                <option value="NE">Nebraska</option>
                <option value="NV">Nevada</option>
                <option value="NH">New Hampshire</option>
                <option value="NJ">New Jersey</option>
                <option value="NM">New Mexico</option>
                <option value="NY">New York</option>
                <option value="NC">North Carolina</option>
                <option value="ND">North Dakota</option>
                <option value="OH">Ohio</option>
                <option value="OK">Oklahoma</option>
                <option value="OR">Oregon</option>
                <option value="PA">Pennsylvania</option>
                <option value="RI">Rhode Island</option>
                <option value="SC">South Carolina</option>
                <option value="SD">South Dakota</option>
                <option value="TN">Tennessee</option>
                <option value="TX">Texas</option>
                <option value="UT">Utah</option>
                <option value="VT">Vermont</option>
                <option value="VA">Virginia</option>
                <option value="WA">Washington</option>
                <option value="WV">West Virginia</option>
                <option value="WI">Wisconsin</option>
                <option value="WY">Wyoming</option>
              </select>
            </div>
            <label for="contactFormPhone">Phone Number<span class="requiredField">*</span></label>
            <input aria-label="Phone number" type="tel" id="contactFormPhone" name="contact[Phone]" placeholder="Phone Number" required/>
            <label for="contactFormEmail">Email Address<span class="requiredField">*</span></label>
            <input aria-label="Email address" type="email" id="contactFormEmail" name="contact[email]" placeholder="Email Address" required/>
            <label for="InstagramURL">Instagram URL<span class="requiredField">*</span></label>
            <input aria-label="Instagram URL" type="text" id="InstagramURL" name="contact[InstagramURL]" placeholder="Instagram URL" required/>
            <label for="InstagramFollowers">Instagram Followers<span class="requiredField">*</span></label>
            <input aria-label="Instagram Followers" type="text" id="InstagramFollowers" name="contact[InstagramFollowers]" placeholder="Instagram Followers" required/>
            <label for="YouTubeURL">YouTube URL<span class="requiredField">*</span></label>
			<input aria-label="YouTube URL" type="text" id="YouTubeURL" name="contact[YouTubeURL]" placeholder="YouTube URL" required/>
            <label for="YouTubeSubscribers">YouTube Subscribers<span class="requiredField">*</span></label>
            <input aria-label="YouTube Subscribers" type="text" id="YouTubeSubscribers" name="contact[YouTubeSubscribers]" placeholder="YouTube Subscribers" required/>                        
            <div class="DateofBirth-main"><label for="" class="f-left">Date of Birth<span class="requiredField">*</span></label>
              <div class="DateofBirth-input f-right">
                <input aria-label="Birth month" type="number" id="BirthMonth" class="not-qty" name="contact[BirthMonth]" placeholder="MM" min="1" max="12" required/>
                <input aria-label="Birth date" type="number" id="BirthDate" class="not-qty day-input" name="contact[BirthDate]" placeholder="DD" min="1" max="31" required/>
                <input aria-label="Birth year" type="number" id="BirthYear"  class="not-qty year-input" name="contact[BirthYear]" placeholder="YY" min="00" max="99" required/>
              </div>
            </div>

            <!--<label>Tells us a little about yourself (Hobbies, interest, etc...)</label>-->
            <label for="AboutYourself">About yourself<span class="requiredField">*</span></label>
            <textarea aria-label="About yourself" rows="15" cols="90" id="AboutYourself" name="contact[AboutYourself]" placeholder="About yourself" required style="border: solid 1px #000; font-size: 1.2rem;"></textarea>

            <div class="ambassadore-btn f-left"><button aria-label="Submit" id="input_2" type="submit" class="form-submit-button" > Submit </button></div>
          </div>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>

