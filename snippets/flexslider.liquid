<!-- snippets/flexslider.liquid -->

<section class="homepage-section" class="no-fouc">
  {% if settings.display-wide %}
  {% else %}
  <div class="row">
    <div class="desktop-12 tablet-6 mobile-3">
      {% endif %}

      {% if settings.homepage-display == 'video' %}
      <div class="videoWrapper">
        {{ settings.video-embed }}
      </div>

      {% elsif settings.homepage-display == 'slideshow' %}
      <div class="flexslider showdesktop">
        <ul class="slides">


          {% for i in (1..5) %}
          {% assign slide_show = 'slide-' | append: i | append: '-check' %}

          {% if settings[slide_show] %}
          {% assign index = 'slide' | append: i %}
          {% assign slide_link_url = 'slide' | append: i | append: '_url' %}
          {% assign slide_img_url = 'image' | append: i | append: '.jpg' %}
          {% assign slide_img_alt = 'slide' | append: i | append: '_alt' %}
          {% assign slide_title = 'slide-' | append: i | append: '-title' %}
          {% assign slide_caption = 'slide-' | append: i | append: '-caption' %}
          {% assign slide_button = 'slide-' | append: i | append: '-button' %}
          {% assign slide_button_text = 'slide-' | append: i | append: '-button-text' %}
          {% assign slide_title_color = 'slide-' | append: i | append: '-title-color' %}



          <li>

            {% if settings[slide_link_url] == '#notify' %}
            <a href="javascript:;" data-fancybox data-src="#notify">
            {% else %}
            <a href="{{ settings[slide_link_url] }}">
            {% endif %}

              <img class="flexslider-lazyload" data-src="{{ slide_img_url | asset_url }}" alt="{{ settings[slide_img_alt] }}" />
            </a>
            <div class="flex-caption {{ index }}">
              <div class="caption-inners">

                {% if settings[slide_title] != blank %}
                <h1 class="slide-title" style="color:{{ settings[slide_title_color] }}">{{ settings[slide_title] }}</h1>
                {% endif %}
                {% if settings[slide_caption] != blank %}
                <h2 class="caption" style="color:{{ settings[slide_title_color] }}">{{ settings[slide_caption] }}</h2>
                {% endif %}
                {% if settings[slide_button] %}
                <div class="cta">
                  <a style="border: 2px solid {{settings[slide_title_color]}}; color: {{settings[slide_title_color]}}" href="{{ settings[slide_link_url] }}">{{ settings[slide_button_text] }}</a>
                </div>
                {% endif %}
              </div>
            </div>
          </li>
          {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!---------------------mobile--------------------->
      <div class="flexslider showmobile">
        <ul class="slides">


          {% for i in (1..5) %}
          {% assign slide_show = 'mobslide-' | append: i | append: '-check' %}

          {% if settings[slide_show] %}
          {% assign index = 'mobslide' | append: i %}
          {% assign slide_link_url = 'mobslide' | append: i | append: '_url' %}
          {% assign slide_img_url = 'mobimage' | append: i | append: '.jpg' %}
          {% assign slide_img_alt = 'mobslide' | append: i | append: '_alt' %}
          {% assign slide_title = 'mobslide-' | append: i | append: '-title' %}
          {% assign slide_caption = 'mobslide-' | append: i | append: '-caption' %}
          {% assign slide_button = 'mobslide-' | append: i | append: '-button' %}
          {% assign slide_button_text = 'mobslide-' | append: i | append: '-button-text' %}
          {% assign slide_title_color = 'mobslide-' | append: i | append: '-title-color' %}

          <li>
            {% if settings[slide_link_url] == '#notify' %}
            <a href="javascript:;" data-fancybox data-src="#notify">
            {% else %}
            <a href="{{ settings[slide_link_url] }}">
            {% endif %}
              <img class="flexslider-lazyload" data-src="{{ slide_img_url | asset_url }}" alt="{{ settings[slide_img_alt] }}" />


            </a>
            <div class="flex-caption {{ index }}">
              <div class="caption-inners">

                {% if settings[slide_title] != blank %}
                <h1 class="slide-title" style="color:{{ settings[slide_title_color] }}">{{ settings[slide_title] }}</h1>
                                               {% endif %}
                                               {% if settings[slide_caption] != blank %}
                                               <h2 class="caption" style="color:{{ settings[slide_title_color] }}">{{ settings[slide_caption] }}</h2>
                                                                 {% endif %}
                                                                 {% if settings[slide_button] %}
                                                                 <div class="cta">
                                                                                 <a style="border: 2px solid {{settings[slide_title_color]}}; color: {{settings[slide_title_color]}}" href="{{ settings[slide_link_url] }}">{{ settings[slide_button_text] }}</a>
                                                                                                                         </div>
                                                                                                                         {% endif %}
                                                                                                                         </div>
                                                                                                                         </div>
                                                                                                                         </li>
                                                                                                                         {% endif %}
                                                                                                                         {% endfor %}
                                                                                                                         </ul>
                                                                                                                         </div>
                                                                                                                         {% endif %}

                                                                                                                         {% if settings.display-wide %}
                                                                                                                         {% else %}
                                                                                                                         </div>
                                                                                                                         </div>
                                                                                                                         {% endif %}
                                                                                                                         <div class="clear"></div>
                                                                                                                                           </section>


