<a href="{{ settings.pages-2-link }}" aria-label="Homepage Banner 2">
  <section id="homepage-pages-two" class="{% if settings.parallax %}parallax parallax-window{% endif %} no-fouc" {% if settings.parallax %}data-parallax="scroll" data-image-src="{{ 'parallax-background-2.jpg' | asset_url }}"{% endif %}>
    <article class="row">
      <div class="pages-left-content desktop-12 tablet-6 mobile-3 {% unless settings.parallax %}parallax_inactive_width{% endunless %}">
        {% if settings.pages-2-content == 'text' %}
        <div class="parallax-text">
          {% if settings.pages-2-link != blank %}
          {{ settings.pages-2-text }}
          {% comment %} <a href="{{ settings.pages-2-link }}">{{ settings.pages-2-text }}</a>{% endcomment %}
          {% else %}{{ settings.pages-2-text }}
          {% endif %}
        </div>
        {% elsif settings.pages-2-content == 'page-content' %}
        {{ pages[settings.pages-2].content }}
        {% else %}
        {% endif %}
        {% unless settings.parallax %}
        <img alt="background" class="tester" src="{{ 'parallax-background-2.jpg' | asset_url }}"/>
        {% endunless %}
      </div>
    </article>
  </section>
</a>
<div class="clear"></div>
