<div class="cont-form"><p>For online order related inquiries please check your {% if customer  %}<a href="/account#order-history">{% else %}<a href="/pages/order-status">{% endif %}Order Status page</a> or see the Bombshell Sportswear <a href="/pages/returns-exchanges">Returns & Exchange page</a>.</p>
{% form 'contact' %}



{% if form.errors %}
<div class="notice error">
  <p>{{ 'general.forms.post_error' | t }}</p>
  <ul class="disc">
    {% for field in form.errors %}
    {% if field == 'form' %}
    <li>
      {{ form.errors.messages[field] }}
    </li>
    {% else %}
    <li>
      <strong>{{ field | replace: 'body', 'Message' }}</strong> {{ form.errors.messages[field] }}
    </li>
    {% endif %}

    {% endfor %}
  </ul>
</div>
{% endif %}


{% if form.posted_successfully? %}
<div class="successForm feedback">
  <p>{{ 'contact.form.post_success' | t }}</p>
</div>
{% endif %}
  <div class="requiredMessage"><span class="requiredField">*</span> indicates a required field</div>
<div id="contactFormWrapper">
  <div class="form-group ">
    <p>
      <label for="contactFormName">{{ 'contact.form.name' | t }}<span class="requiredField">*</span></label>
      <input aria-label="Your name" type="text" id="contactFormName" name="contact[name]" placeholder="{{ 'contact.form.name' | t }}" class="required" required aria-required="true" />
    </p>
  </div>
  <div class="form-group">
    <p>
		<label for="contactFormEmail">{{ 'contact.form.email' | t }}<span class="requiredField">*</span></label>
      <input aria-label="Email address" type="email" id="contactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" class="required" required aria-required="true" />
    </p>
  </div>
  <div class="form-group">
    <p>
      <label for="contactFormTelephone">{{ 'contact.form.phone' | t }}</label>
      <input aria-label="Phone number" type="text" id="contactFormTelephone" name="contact[phone]" placeholder="{{ 'contact.form.phone' | t }}" />
    </p>
  </div>
  <div class="form-group">
    <p>
      <label for="contactFormOrderNumber">Order Number</label>
      <input aria-label="Order number" type="text" id="contactFormOrderNumber" name="contact[order_number]" placeholder="Order Number" />
    </p>
  </div>

  <div class="form-group">
    <p>
      <label for="contactFormMessage">{{'contact.form.message' | t}}<span class="requiredField">*</span></label>
      <textarea aria-label="Your comment or question" rows="15" cols="90" id="contactFormMessage" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}" class="required" required aria-required="true" ></textarea>
    </p>
    <p>
      <input aria-label="Submit" tabindex="0" type="submit" id="contactFormSubmit" class="secondary button" value="{{ 'contact.form.send' | t }}" />
    </p>
  </div>
</div>
<div class="clear"></div>
</div>
{% comment %}{% if form.posted_successfully? %}
<div class="successForm feedback">
  <p>{{ 'contact.form.post_success' | t }}</p>
</div>
{% endif %}{% endcomment %}



{% endform %}

<div class="clear"></div>

{% if settings.show-map %}
<div id="gmap">
  <div class="Flexible-container">
    {{ settings.map }}
  </div>
</div>
{% endif %}

