<div class="app-downloader">
  <div class="closer"><button>&#x26CC;</button></div>
  <div class="app-logo"><img alt="Logo" src="{{ section.settings.image | img_url: '50x' }}"></div>
  <div class="app-info">
    <p>{{ section.settings.heading }}</p>
    <span>{{ section.settings.sub_heading }}</span>
    <div class="app-rating">
      <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i>
    </div>
    <span>{{ section.settings.sub_sub_heading }}</span>
  </div>
  <div class="app-link">
    <a href="{{ section.settings.link }}">{{ section.settings.btn }}</a>
  </div>
</div>

{% schema %}
{
"name": "Announcement App",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
	{
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading"
    },
	{
      "type": "text",
      "id": "sub_sub_heading",
      "label": "Sub Heading"
    },
	{
      "type": "text",
      "id": "btn",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button link"
    }
  ]
}
{% endschema %}
<script>
  jQuery(document).ready(function($){
    var deviceAgent = navigator.userAgent.toLowerCase();
    var agentID = deviceAgent.match(/(iphone|ipod|ipad)/);

    if (agentID) {
      //alert(deviceAgent);
      $('.app-downloader').show();
      // mobile code here

    }
    else{
      
      $('.app-downloader').show();
    }
  });
</script>